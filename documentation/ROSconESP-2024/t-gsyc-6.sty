\def\makeslideheading#1{%
\begin{center}
    \begin{center}
      \textbf{\Large{\textcolor{darkblue}{#1}}}
    \end{center}
\end{center} 
\vspace{5mm}
}


\def\makeslidesubheading#1{%
  \begin{center}
  \textbf{\textsl{\textcolor{darkgreen}{#1}}}
  \end{center}
\vspace{2mm}
}

