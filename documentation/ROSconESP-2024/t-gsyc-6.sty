\def\twoupnotes{%
  \global\def\twoup@note{\thispagestyle{empty}\textbf{\notetext}}
  \global\def\twoup@title@note{\newpage \ \ \ \thispagestyle{empty}}
}

\def\slsect#1{%
  \global\def\t@ema{{#1}}
  \first@tematrue
  \global\def\rightmark{\t@ema\t@emacont}\global\def\leftmark{\sltitle\slchap}%
  \makeslideheading{{#1}}
}

\def\set@cont{%
  \global\def\t@emacont{\ \contstr}
}
\def\setno@cont{%
  \global\def\t@emacont{}
}

\def\new@trans{%
  {\iffirst@tema\setno@cont \else\set@cont \fi}}


